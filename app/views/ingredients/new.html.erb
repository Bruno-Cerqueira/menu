<%= form_with model: @ingredient do |form| %>
  <div class="field">
    <%= form.label :id, 'Choose Existing Ingredient' %>
    <%= form.select :id, options_for_select(Ingredient.all.map { |i| [i.name, i.id] }), include_blank: 'Select an existing ingredient' %>
  </div>

  <div id="new_ingredient_fields">
    <div class="field">
      <%= form.label :name, 'Or Enter New Ingredient Name' %>
      <%= form.text_field :name %>
    </div>
  </div>
