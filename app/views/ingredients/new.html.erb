    <ul>
      <%= form.fields_for :ingredient_prices do |ingredient_prices_form| %>
        <li>
          <%= ingredient_prices_form.label :price %>
          <%= ingredient_prices_form.number_field :price %>
        </li>
        <li>
          <%= ingredient_prices_form.label :source %>
          <%= ingredient_prices_form.text_field :source %>
        </li>
      <% end %>
    </ul>
    <div class="actions">
        <%= form.submit %>
    </div>
  <% end %>